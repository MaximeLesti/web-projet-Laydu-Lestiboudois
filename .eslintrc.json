{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "comma-dangle": ["off"],
        "space-before-function-paren": ["off"],
        "quotes": ["off"],
        "no-useless-constructor": ["off"],
        "no-unused-expressions": ["off"]
    }
}
